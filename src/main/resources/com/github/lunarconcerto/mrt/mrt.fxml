<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.*?>
<?import org.kordamp.ikonli.javafx.*?>
<VBox xmlns:fx="http://javafx.com/fxml/1" prefHeight="700.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/"
      fx:controller="com.github.lunarconcerto.mrt.gui.MRTController">
    <children>
        <MenuBar VBox.vgrow="NEVER">
            <menus>
                <Menu mnemonicParsing="false" text="文件">
                    <items>
                        <MenuItem fx:id="menuItemSelectFile" mnemonicParsing="false"
                                  onAction="#onMenuItemSelectFilePathAction" text="打开..."/>
                        <Menu fx:id="menuHistoryPath" mnemonicParsing="false" text="打开最近的路径"/>
                        <SeparatorMenuItem mnemonicParsing="false"/>
                        <MenuItem mnemonicParsing="false" onAction="#onMenuItemPropertyAction" text="设置..."/>
                        <SeparatorMenuItem mnemonicParsing="false"/>
                        <MenuItem mnemonicParsing="false" onAction="#onMenuItemExitAction" text="退出"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="运行">
                    <items>
                        <MenuItem onAction="#onStartButtonAction" mnemonicParsing="false" text="开始运行"/>
                        <MenuItem mnemonicParsing="false" text="撤销结果"/>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="帮助">
                    <items>
                        <MenuItem mnemonicParsing="false" text="帮助"/>
                        <MenuItem mnemonicParsing="false" onAction="#onMenuItemAboutAction" text="关于..."/>
                    </items>
                </Menu>
            </menus>
        </MenuBar>
        <SplitPane dividerPositions="0.3, 0.6" prefHeight="650.0" prefWidth="900.0">
            <items>
                <AnchorPane>
                    <children>
                        <TreeView fx:id="treeViewFileSelector" maxHeight="-Infinity" maxWidth="-Infinity"
                                  minHeight="-Infinity" minWidth="-Infinity" prefHeight="656.0" prefWidth="299.0">
                            <contextMenu>
                                <ContextMenu>
                                    <items>
                                        <MenuItem mnemonicParsing="false" onAction="#onTreeMenuSelectAction" text="选择">
                                            <graphic>
                                                <FontIcon fill="black" iconLiteral="fa-check"/>
                                            </graphic>
                                        </MenuItem>
                                        <MenuItem mnemonicParsing="false" onAction="#onTreeMenuSelectAllAction"
                                                  text="全选">
                                            <graphic>
                                                <FontIcon fill="black" iconLiteral="fa-check-square-o"/>
                                            </graphic>
                                        </MenuItem>
                                        <MenuItem mnemonicParsing="false" onAction="#onTreeMenuReverseSelectAction"
                                                  text="反选">
                                            <graphic>
                                                <FontIcon fill="black" iconLiteral="fa-check-square"/>
                                            </graphic>
                                        </MenuItem>
                                        <MenuItem mnemonicParsing="false" onAction="#onTreeMenuRefreshAction" text="刷新">
                                            <graphic>
                                                <FontIcon fill="black" iconLiteral="fa-refresh"/>
                                            </graphic>
                                        </MenuItem>
                                        <CheckMenuItem fx:id="menuItemDirOnly" mnemonicParsing="false"
                                                       onAction="#onDirOnlyButtonAction" text="仅显示文件夹">
                                            <graphic>
                                                <FontIcon fill="black" iconLiteral="fa-folder"/>
                                            </graphic>
                                        </CheckMenuItem>
                                    </items>
                                </ContextMenu>
                            </contextMenu>
                        </TreeView>
                        <Label contentDisplay="RIGHT" layoutX="200.0" layoutY="599.0" prefHeight="37.0" prefWidth="86.0"
                               text="文件选择" textAlignment="RIGHT" textFill="#00000043">
                            <font>
                                <Font name="Microsoft YaHei" size="20.0"/>
                            </font>
                        </Label>
                    </children>
                </AnchorPane>
                <AnchorPane>
                    <children>
                        <SplitPane dividerPositions="0.5, 0.5" orientation="VERTICAL" prefWidth="283.0">
                            <items>
                                <AnchorPane>
                                    <children>
                                        <ListView fx:id="listViewSelectedFiles" maxHeight="-Infinity"
                                                  maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
                                                  prefHeight="325.0" prefWidth="297.0"
                                                  stylesheets="@css/list-view-common.css">
                                            <contextMenu>
                                                <ContextMenu>
                                                    <items>
                                                        <MenuItem mnemonicParsing="false"
                                                                  onAction="#onListMenuRemoveAction" text="移除选中">
                                                            <graphic>
                                                                <FontIcon fill="black" iconLiteral="fa-remove"/>
                                                            </graphic>
                                                        </MenuItem>
                                                        <MenuItem mnemonicParsing="false"
                                                                  onAction="#onListMenuRemoveAllAction" text="全部移除">
                                                            <graphic>
                                                                <FontIcon fill="black" iconLiteral="fa-reply-all"/>
                                                            </graphic>
                                                        </MenuItem>
                                                    </items>
                                                </ContextMenu>
                                            </contextMenu>
                                        </ListView>
                                        <Label layoutX="198.0" layoutY="270.0" prefHeight="37.0" prefWidth="86.0"
                                               text="已选文件" textFill="#00000043">
                                            <font>
                                                <Font name="Microsoft YaHei" size="20.0"/>
                                            </font>
                                        </Label>
                                    </children>
                                </AnchorPane>
                                <AnchorPane>
                                    <children>
                                        <ListView fx:id="uiLogger" maxHeight="-Infinity" maxWidth="-Infinity"
                                                  minHeight="-Infinity" minWidth="-Infinity" prefHeight="292.0"
                                                  prefWidth="297.0" stylesheets="@css/list-view-logger.css">
                                            <contextMenu>
                                                <ContextMenu>
                                                    <items>
                                                        <MenuItem mnemonicParsing="false" onAction="#onUILoggerCopy"
                                                                  text="复制">
                                                            <graphic>
                                                                <FontIcon fill="black" iconLiteral="fa-copy"/>
                                                            </graphic>
                                                        </MenuItem>
                                                    </items>
                                                </ContextMenu>
                                            </contextMenu>
                                        </ListView>
                                        <Label layoutX="198.0" layoutY="14.0" prefHeight="37.0" prefWidth="86.0"
                                               text="       日志" textFill="#00000043">
                                            <font>
                                                <Font name="Microsoft YaHei" size="20.0"/>
                                            </font>
                                        </Label>
                                    </children>
                                </AnchorPane>
                                <AnchorPane>
                                    <children>
                                        <ProgressBar fx:id="progressBar" prefHeight="25.0" prefWidth="297.0"
                                                     progress="0.0"/>
                                    </children>
                                </AnchorPane>
                            </items>
                        </SplitPane>
                    </children>
                </AnchorPane>
                <AnchorPane>
                    <children>
                        <SplitPane dividerPositions="0.5" orientation="VERTICAL">
                            <items>
                                <AnchorPane>
                                    <children>
                                        <ListView fx:id="ruleFillingSetter" maxHeight="-Infinity" maxWidth="-Infinity"
                                                  minHeight="-Infinity" minWidth="-Infinity" prefHeight="325.0"
                                                  prefWidth="299.0" stylesheets="@css/list-view-rule-setter.css">
                                            <contextMenu>
                                                <ContextMenu>
                                                    <items>
                                                        <MenuItem onAction="#onCreateNewFillingRule" text="插入"/>
                                                        <MenuItem onAction="#onDeleteFillingRule" text="删除"/>
                                                        <MenuItem onAction="#onMoveUpFillingRule" text="上移"/>
                                                        <MenuItem onAction="#onMoveDownFillingRule" text="下移"/>
                                                        <MenuItem onAction="#onClearFillingRule" text="清空"/>
                                                    </items>
                                                </ContextMenu>
                                            </contextMenu>
                                        </ListView>
                                        <Label layoutX="144.0" layoutY="270.0" prefHeight="37.0" prefWidth="121.0"
                                               text="填充规则定义" textFill="#00000043">
                                            <font>
                                                <Font name="Microsoft YaHei" size="20.0"/>
                                            </font>
                                        </Label>
                                    </children>
                                </AnchorPane>
                                <AnchorPane prefWidth="297.0">
                                    <children>
                                        <ListView fx:id="ruleReplaceSetter" layoutY="-1.0" maxHeight="-Infinity"
                                                  maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
                                                  prefHeight="324.0" prefWidth="297.0"
                                                  stylesheets="@css/list-view-rule-setter.css">
                                            <contextMenu>
                                                <ContextMenu>
                                                    <items>
                                                        <MenuItem onAction="#onCreateNewReplaceRule" text="插入"/>
                                                        <MenuItem onAction="#onDeleteReplaceRule" text="删除"/>
                                                        <MenuItem onAction="#onMoveUpReplaceRule" text="上移"/>
                                                        <MenuItem onAction="#onMoveDownReplaceRule" text="下移"/>
                                                        <MenuItem onAction="#onClearReplaceRule" text="清空"/>
                                                    </items>
                                                </ContextMenu>
                                            </contextMenu>
                                        </ListView>
                                        <Label layoutX="144.0" layoutY="14.0" prefHeight="37.0" prefWidth="121.0"
                                               text="替换规则定义" textFill="#00000043">
                                            <font>
                                                <Font name="Microsoft YaHei" size="20.0"/>
                                            </font>
                                        </Label>
                                    </children>
                                </AnchorPane>
                            </items>
                        </SplitPane>
                    </children>
                </AnchorPane>
            </items>
        </SplitPane>
        <HBox id="HBox" alignment="CENTER_LEFT" prefHeight="25.0" spacing="5.0" VBox.vgrow="NEVER">
            <children>
                <Label fx:id="labelStatusLeft" maxHeight="1.7976931348623157E308" maxWidth="-1.0" HBox.hgrow="ALWAYS">
                    <font>
                        <Font size="11.0" fx:id="x3"/>
                    </font>
                    <textFill>
                        <Color red="0.625" green="0.625" blue="0.625" fx:id="x4"/>
                    </textFill>
                </Label>
                <Pane HBox.hgrow="ALWAYS"/>
                <Label font="$x3" maxWidth="-1.0" textFill="$x4" HBox.hgrow="NEVER"/>
            </children>
            <padding>
                <Insets bottom="3.0" left="3.0" right="3.0" top="3.0"/>
            </padding>
        </HBox>
    </children>
</VBox>
