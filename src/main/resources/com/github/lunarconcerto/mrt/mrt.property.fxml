<fx:root maxHeight="0.0" maxWidth="0.0" minHeight="600.0" minWidth="400.0" prefHeight="580.0" prefWidth="400.0" type="javafx.scene.layout.AnchorPane" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1">
