                                        <ToggleGroup fx:id="toggleProxyGroup" />
                                    </fx:define>
                                    <RadioButton fx:id="toggleNoProxy" toggleGroup="$toggleProxyGroup" layoutX="14.0" layoutY="14.0" mnemonicParsing="false" text="无代理"/>
