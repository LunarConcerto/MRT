                           </AnchorPane>
                        </content></TitledPane>
                        </panes>
                    </Accordion>
                </AnchorPane>
            </Tab>
            <Tab text="其他设置" />
        </TabPane>
    </AnchorPane>

   <Button fx:id="buttonApply" layoutX="330.0" layoutY="563.0" minHeight="20.0" minWidth="50.0" mnemonicParsing="false" onAction="#onApply" text="应用" />
